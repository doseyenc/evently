<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="viewModel" type="com.doseyenc.evently.ui.detail.DetailCommentsViewModel" />
        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerComments"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:paddingHorizontal="@dimen/spacing_large"
            android:paddingBottom="@dimen/spacing_small"
            tools:listitem="@layout/item_comment" />

        <TextView
            android:id="@+id/emptyComments"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/spacing_large"
            android:text="@string/comments_empty"
            android:textColor="@color/on_surface_variant"
            android:textSize="@dimen/text_size_medium"
            android:visibility="gone"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/spacing_large"
            android:paddingTop="@dimen/spacing_medium"
            android:paddingBottom="@dimen/spacing_large"
            android:background="@color/surface">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avatarComment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/me"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Evently.AvatarCircle" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_comment_input"
                android:minHeight="48dp"
                android:paddingStart="@dimen/spacing_medium_plus"
                android:paddingEnd="@dimen/spacing_medium_plus"
                android:paddingTop="@dimen/spacing_small"
                android:paddingBottom="@dimen/spacing_small"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/editComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/add_comment"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="4"
                    android:minHeight="36dp"
                    android:text="@={viewModel.draftCommentText}"
                    android:textColor="@color/on_surface"
                    android:textColorHint="@color/on_surface_variant"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/buttonPost"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="@dimen/spacing_small"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/post"
                android:onClick="@{() -> viewModel.postComment()}"
                android:src="@drawable/ic_send"
                app:tint="@color/primary" />
        </LinearLayout>
    </LinearLayout>
</layout>
